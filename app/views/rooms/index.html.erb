<div class="flex justify-center items-center">
  <div>
    <h1 class="text-xl font-bold color-black my-5">Rooms</h1>

    <table class="table-fixed mb-5 w-64">
      <thead>
        <tr>
          <th class="w-1/2 px-4 py-2 text-left">Name</th>
          <th class="w-1/4 px-4 py-2 text-left">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td class="border px-4 py-2"><%= room.name %></td>
            <td class="px-4 py-2">
              <%= link_to 'Visit', room, class: "text-blue-600 visited:text-purple-600" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New room', new_room_path, class: "text-blue-600 visited:text-purple-600" %>

  </div>

</div>



