
<div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 my-16">
  <%= turbo_frame_tag "room" do %>
    <p>
      <strong>Room:</strong>
      <%= @room.name %>
    </p>

    <p>
      <%= link_to 'Edit', edit_room_path(@room) %>
      <%= link_to 'Back', rooms_path, "data-turbo-frame": "_top" %>
    </p>
  <% end %>

  <div class="my-5" id="messages">
    <%= render @room.messages %>
  </div>

  <%#= turbo_frame_tag "new_message", src: new_room_message_path(@room), target: "_top" %>

  <%= link_to "new message", new_room_message_path(@room), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
</div>
